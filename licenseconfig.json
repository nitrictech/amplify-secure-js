{
  "ignoreFile": ".gitignore",
  "ignore": [
    "README",
    ".*",
    "**/*.config.*",
    "**/.gitignore",
    "lib/**/*",
    ".yarn/",
    ".github/",
    "**/*.md",
    "*.lock",
    "*.html",
    "**/.eslintignore"
  ],
  "license": "./assets/license_header.txt",
  "licenseFormats": {
    "js|ts": {
      "eachLine": {
        "prepend": "// "
      }
    },
    "dotfile|^Dockerfile": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
