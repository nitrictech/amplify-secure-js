{
  "compilerOptions": {
    "lib": ["dom", "ES2015"],
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "importHelpers": true,
    "target": "ES5"
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
